@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/login.css">
    <title>Login</title>
</head>

<body>
    <div class="parent clearfix">
        <div class="bg-illustration">
            <div class="login-logo">
                <img src="https://preview.keenthemes.com/metronic/theme/html/demo12/dist/assets/media/logos/logo-letter-1.png" alt="logo" style="width: 100px; height: 70px;">
                <h1 style="color: white">Mercury</h1>
            </div>
            <div class="burger-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>

        </div>

        <div class="login">
            <div class="container">
                <h1>Login to access to<br />your account</h1>
                <div class="login-form">
                    <div asp-validation-summary="ModelOnly" style="padding: 0px 30px; color: red"></div>
                    <form method="post" class="pt-2">
                        <input asp-for="Email" placeholder="E-mail Address">
                        <input asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="remember-form">
                            <input asp-for="isPersistent">
                            <span>Remember me</span>
                        </div>
                        <div class="forget-pass">
                            <a href="#">Forgot Password ?</a>
                        </div>
                        <button type="submit">Log-In</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>

</html>



